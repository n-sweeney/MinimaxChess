<Window x:Class="MinimaxChess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess" Height="800" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/MinimaxChess;component/Assets/Textures/TableBackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="WhiteCapturedPanel" 
                    Orientation="Horizontal" 
                    Grid.Row="0" Grid.Column="0"
                    HorizontalAlignment="Left"
                    Margin="10"
                    Height="50">
        </StackPanel>

        <TextBlock x:Name="TimerText"
                   Grid.Row="0" Grid.Column="1"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="00:00" />

        <StackPanel x:Name="BlackCapturedPanel" 
                    Orientation="Horizontal" 
                    Grid.Row="0" Grid.Column="2"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Height="50">
        </StackPanel>

        <Border Grid.Row="1" Grid.ColumnSpan="3" BorderThickness="100,0,100,50">
            <Border BorderThickness="5" BorderBrush="Black"
        Background="Beige" >   
                <UniformGrid x:Name="UniformGridBoard" Rows="8" Columns="8" />
            </Border>
        </Border>


        <Border x:Name="TurnBorder"
        Grid.RowSpan="2"
        Grid.ColumnSpan="3"
        Background="Black"
        Opacity="0.8"
        Visibility="Collapsed"
        Height="50"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center">
            <TextBlock x:Name="TurnText"
               Text="White's Turn"
               FontSize="32"
               FontWeight="Bold"
               Foreground="White"
               TextAlignment="Center"
               VerticalAlignment="Center"
               HorizontalAlignment="Stretch"/>
        </Border>



    </Grid>
    
    
</Window>
